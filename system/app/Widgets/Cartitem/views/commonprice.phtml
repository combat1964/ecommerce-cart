<?php if(isset($this->freebies)):?>
    <span class="toastercart-item-<?php echo $this->priceOption; ?>" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->translate('free'); ?></span>
<?php else:?>
    <?php if(!empty($this->discountList)):?>
        <div class="toastercart-item-<?php echo $this->priceOption; ?> text-left" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->translate('Unit price');?>: <?php echo $this->currency($this->price); ?>
        <?php foreach($this->discountList as $discountData):?>
            <?php if($discountData['type'] === 'percent'):?>
                <?php $discount = $this->currency($discountData['unitSave']); ?>
            <?php else:?>
                <?php $discount = $this->currency($discountData['discount']); ?>
            <?php endif;?>
            <?php if($discountData['name'] === 'groupprice') continue; ?>
            <?php if($discountData['name'] === 'promo') : ?>
                <?php $message =  $this->translate('On sale'). ': ' . $this->translate('buy now to save') . ' ' . $discount . ' ' . $this->translate('per unit') ?>
            <?php elseif($discountData['name'] === 'q-ty discount') : ?>
                    <?php $message =  $this->translate('Act now'). ': ' . $this->translate('Buying') . ' ' . $this->quantity . ' ' . $this->translate('save you') .' ' . $discount . ' ' . $this->translate('per unit') ?>
            <?php else: ?>
                <?php $message = ucfirst($discountData['name']) . ': ' . $this->translate('you save') . ' ' .  $discount . ' ' . $this->translate('per unit')?>
            <?php endif ?>
            <span class="item-discount <?php echo $discountData['name'];?>"><?php echo $message; ?></span>
        <?php endforeach;?>
        </div>
    <?php else:?>
        <span class="toastercart-item-<?php echo $this->priceOption; ?>" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->currency($this->price); ?></span>
    <?php endif;?>
<?php endif;?>